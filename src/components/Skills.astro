  {
    title: 'Infrastructure & Cloud',
    icon: 'cloud',
    skills: [
      { name: 'Virtualization', level: 84, icon: 'layers' },
      { name: 'Container Orchestration', level: 85, icon: 'database' },
      { name: 'Cloud Platforms', level: 89, icon: 'globe' },
      { name: 'Network Design', level: 78, icon: 'network' },
      { name: 'Infrastructure as Code', level: 80, icon: 'cpu' }
    ]
  },
  {
    title: 'System Administration',
    icon: 'terminal',
    skills: [
      { name: 'Linux Administration', level: 82, icon: 'terminal' },
      { name: 'Automation Scripts', level: 77, icon: 'cpu' },
      { name: 'Storage Solutions', level: 86, icon: 'harddrive' },
      { name: 'Monitoring & Logging', level: 81, icon: 'activity' },
      { name: 'Backup & Recovery', level: 83, icon: 'harddrive' }
    ]
  },
  {
    title: 'Security & Networking',
    icon: 'shield',
    skills: [
      { name: 'Network Security', level: 76, icon: 'lock' },
      { name: 'Firewall Management', level: 74, icon: 'shield' },
      { name: 'VPN Setup', level: 88, icon: 'wifi' },
      { name: 'Access Control', level: 82, icon: 'lock' },
      { name: 'SSL/TLS Configuration', level: 79, icon: 'shield' }
    ]
  }
