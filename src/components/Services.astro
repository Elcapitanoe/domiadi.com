---
const services = [
  {
    icon: 'server',
    title: 'HomeLab Setup',
    description: 'I will help you build a home lab that is perfect for learning, testing, or running your own services.',
    features: ['Hardware recommendations', 'Network design', 'Virtualization setup', 'Storage planning', 'Power management']
  },
  {
    icon: 'cloud',
    title: 'Cloud Migration',
    description: 'Moving to the cloud does not have to be scary. I will make sure your transition is smooth and cost-effective.',
    features: ['Migration strategy', 'Cost optimization', 'Performance tuning', 'Architecture design', 'Compliance setup']
  },
  {
    icon: 'shield',
    title: 'Security Setup',
    description: 'Keep your systems safe with proper security measures that do not get in the way of productivity.',
    features: ['Network security', 'Access control', 'Firewall setup', 'Security audits', 'Vulnerability scanning']
  },
  {
    icon: 'cog',
    title: 'Automation Magic',
    description: 'Stop doing repetitive tasks manually. I will automate the boring stuff so you can focus on what matters.',
    features: ['Custom scripts', 'Process automation', 'CI/CD pipelines', 'Infrastructure as code', 'Workflow optimization']
  },
  {
    icon: 'monitor',
    title: 'Monitoring & Alerts',
    description: 'Know what is happening with your systems before problems become disasters.',
    features: ['System monitoring', 'Smart alerts', 'Performance dashboards', 'Health checks', 'Log aggregation']
  },
  {
    icon: 'database',
    title: 'Data & Backups',
    description: 'Your data is important. I will make sure it is safe, accessible, and properly organized.',
    features: ['Backup strategies', 'Disaster recovery', 'Data migration', 'Storage optimization', 'Data archiving']
  }
];

const getServiceIcon = (iconName: string) => {
  const icons = {
    server: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>',
    cloud: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>',
    shield: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>',
    cog: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>',
    monitor: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>',
    database: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>'
  };
  return icons[iconName] || icons.server;
};
---

<section id="services" class="py-20 bg-slate-800/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-white mb-4">
        How I Can <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">Help</span>
      </h2>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">
        Whether you need a complete infrastructure overhaul or just want to automate that one annoying task, I have got you covered.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div class="group bg-slate-800/30 backdrop-blur-sm rounded-2xl p-6 border border-slate-700/20 hover:border-slate-600/40 hover:bg-slate-800/50">
          <div class="mb-4">
            <div class="p-4 bg-gradient-to-r from-blue-500/20 to-purple-500/20 rounded-2xl w-fit group-hover:from-blue-500/30 group-hover:to-purple-500/30">
              <svg class="w-8 h-8 text-blue-400 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={getServiceIcon(service.icon)} />
              </svg>
            </div>
          </div>

          <h3 class="text-xl font-semibold text-white mb-3 group-hover:text-blue-400">
            {service.title}
          </h3>

          <p class="text-slate-300 mb-4 leading-relaxed">
            {service.description}
          </p>

          <ul class="space-y-2">
            {service.features.map((feature) => (
              <li class="flex items-center space-x-2 text-sm text-slate-400 group-hover:text-slate-300">
                <div class="w-1.5 h-1.5 bg-blue-400 rounded-full group-hover:bg-purple-400"></div>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <div class="bg-gradient-to-r from-blue-500/10 to-purple-500/10 backdrop-blur-sm rounded-2xl p-8 border border-slate-600/20">
        <h3 class="text-2xl font-semibold text-white mb-4">
          Need Something Different?
        </h3>
        <p class="text-slate-300 mb-6 max-w-2xl mx-auto">
          Every situation is different, and cookie-cutter solutions rarely work. Let us talk about 
          what you actually need and build something that fits perfectly.
        </p>
        <a href="#contact" class="inline-flex items-center space-x-2 bg-gradient-to-r from-blue-500 to-purple-500 text-white px-8 py-3 rounded-xl font-medium hover:shadow-lg hover:shadow-blue-500/25 transition-all duration-300 hover:scale-105">
          <span>Let us talk</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>