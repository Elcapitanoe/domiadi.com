---
const navItems = [
  { href: '#home', label: 'Home' },
  { href: '#about', label: 'About' },
  { href: '#skills', label: 'Skills' },
  { href: '#services', label: 'Services' },
  { href: '#contact', label: 'Contact' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-slate-900/95 backdrop-blur-sm shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <span class="text-xl font-bold text-white">DA</span>
      </div>

      <!-- Desktop Nav -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          {navItems.map((item) => (
            <a
              href={item.href}
              class="text-slate-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-slate-800/50"
            >
              {item.label}
            </a>
          ))}
        </div>
      </div>

      <!-- Mobile Menu Toggle -->
      <div class="md:hidden">
        <details class="relative">
          <summary
            class="list-none text-slate-300 hover:text-white p-2 cursor-pointer"
            aria-label="Toggle mobile menu"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </summary>

          <div class="absolute right-0 mt-2 w-48 bg-slate-900/95 backdrop-blur-sm shadow-lg rounded-md z-50">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
              {navItems.map((item) => (
                <a
                  href={item.href}
                  class="text-slate-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium w-full text-left hover:bg-slate-800/50"
                >
                  {item.label}
                </a>
              ))}
            </div>
          </div>
        </details>
      </div>
    </div>
  </div>
</nav>
