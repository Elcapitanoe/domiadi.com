<section id="home" class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 relative overflow-hidden">
  <!-- Background Animation -->
  <div class="absolute inset-0">
    <div class="absolute top-1/4 left-1/4 w-72 h-72 bg-blue-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
    <div class="space-y-8">
      <!-- Profile Image -->
      <div class="flex justify-center">
        <div class="relative">
          <img
            src="https://raw.githubusercontent.com/Elcapitanoe/DA-Portfolio/master/images/domi-circle.png"
            alt="Domi Adiwijaya"
            class="w-40 h-40 rounded-full border-4 border-slate-600 shadow-2xl"
            loading="eager"
            width="160"
            height="160"
          />
          <div class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-500/20 to-purple-500/20"></div>
        </div>
      </div>

      <!-- Name and Title -->
      <div class="space-y-4">
        <h1 class="text-5xl md:text-7xl font-bold text-white">
          Domi <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">Adiwijaya</span>
        </h1>
        <p class="text-xl md:text-2xl text-slate-300 font-light">
          Tech & HomeLab Enthusiast
        </p>
        <p class="text-lg text-slate-400 max-w-2xl mx-auto leading-relaxed">
          I build things that work. From HomeLab setups to automation scripts, 
          I love turning complex problems into simple, reliable solutions.
        </p>
      </div>

      <!-- CTA -->
      <div class="pt-8">
        <a
          href="#about"
          class="inline-flex items-center space-x-2 text-slate-300 hover:text-white group"
        >
          <span>See what I do</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>